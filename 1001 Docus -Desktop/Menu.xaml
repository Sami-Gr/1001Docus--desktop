        <Button x:Name="ldd" Content="Low 180p" Style="{StaticResource ButtonRevealStyle}" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="209" Margin="0,104,0,0" Click="ldd_Click"/>

    </Grid>
